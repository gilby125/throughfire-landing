---
// @ts-ignore
import { Icon } from "astro-icon/components";

const features = [
  {
    title: "Strategic Consulting",
    description:
      "Expert guidance to align your supply chain strategy with business objectives and market demands for maximum efficiency.",
    icon: "bx:bxs-bulb",
  },
  {
    title: "Supply Chain Technology",
    description:
      "Implementation and optimization of cutting-edge supply chain management systems and platforms tailored to your needs.",
    icon: "bx:bxs-briefcase",
  },
  {
    title: "Integration & Automation",
    description:
      "Seamless system integration and intelligent automation to eliminate inefficiencies, reduce costs, and accelerate operations.",
    icon: "bx:bxs-data",
  },
  {
    title: "Software Development",
    description:
      "Custom software solutions built specifically for your unique supply chain challenges and business requirements.",
    icon: "bx:bxs-window-alt",
  },
  {
    title: "Process Transformation",
    description:
      "End-to-end process improvement and digital transformation initiatives to achieve operational excellence.",
    icon: "bx:bxs-cog",
  },
  {
    title: "Technology Stack Expertise",
    description:
      "Deep expertise across modern tech stacks including cloud platforms, APIs, databases, and enterprise systems.",
    icon: "bx:bxs-server",
  },
];
---

<div class="mt-16 md:mt-0" id="features">
  <h2 class="text-4xl lg:text-5xl font-bold lg:tracking-tight">
    Our Expertise
  </h2>
  <p class="text-lg mt-4 text-slate-600">
    Comprehensive supply chain technology solutions designed to transform your operations and drive competitive advantage.
  </p>
</div>

<div class="grid sm:grid-cols-2 md:grid-cols-3 mt-16 gap-16">
  {
    features.map((item) => (
      <div class="flex gap-4 items-start">
        <div class="mt-1 bg-black rounded-full  p-2 w-8 h-8 shrink-0">
          <Icon class="text-white" name={item.icon} />
        </div>
        <div>
          <h3 class="font-semibold text-lg">{item.title}</h3>{" "}
          <p class="text-slate-500 mt-2 leading-relaxed">{item.description}</p>
        </div>
      </div>
    ))
  }
</div>
