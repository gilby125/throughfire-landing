---
import { Picture } from "astro:assets";
import heroImage from "@/assets/supply-chain-hero.jpg";
import Link from "@/components/ui/link.astro";
---

<main
  class="grid lg:grid-cols-2 place-items-center pt-16 pb-8 md:pt-12 md:pb-24">
  <div class="py-6 md:order-1 hidden md:block">
    <Picture
      src={heroImage}
      alt="Modern supply chain and logistics technology"
      widths={[200, 400, 600]}
      sizes="(max-width: 800px) 100vw, 620px"
      loading="eager"
      format="avif"
    />
  </div>
  <div>
    <h1
      class="text-5xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight xl:tracking-tighter">
      Transform Your Supply Chain with <span class="text-cyan-600">Expert Technology</span>
    </h1>
    <p class="text-lg mt-4 text-slate-600 max-w-xl">
      We deliver cutting-edge consulting, integration, and automation solutions that drive operational excellence and competitive advantage in your supply chain operations.
    </p>
    <div class="mt-6 flex flex-col sm:flex-row gap-3">
      <Link
        href="#contact"
        size="lg"
        class="flex gap-1 items-center justify-center">
        Get Started
      </Link>
      <Link
        size="lg"
        style="outline"
        href="#features"
        class="flex gap-1 items-center justify-center">
        Our Services
      </Link>
    </div>
  </div>
</main>
